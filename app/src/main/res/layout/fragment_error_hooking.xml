<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_16">

    <ImageView
        android:id="@+id/error_hooking_fail_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_xposed"
        app:layout_constraintBottom_toTopOf="@id/error_hooking_fail_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/error_hooking_fail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_16"
        android:text="@string/error_hooking_fail_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.DiscoverKiller"
        app:layout_constraintBottom_toTopOf="@id/error_hooking_fail_desc"
        app:layout_constraintTop_toBottomOf="@id/error_hooking_fail_icon" />

    <TextView
        android:id="@+id/error_hooking_fail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_16"
        android:text="@string/error_hooking_fail_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.DiscoverKiller"
        app:layout_constraintBottom_toTopOf="@id/error_hooking_retry"
        app:layout_constraintTop_toBottomOf="@id/error_hooking_fail_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/error_hooking_retry"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_16"
        android:minWidth="150dp"
        android:text="@string/error_retry"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.DiscoverKiller.Bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_hooking_fail_desc"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>