<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="match_parent"
        tools:src="@mipmap/ic_launcher"
        tools:tint="?android:textColorPrimary"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:id="@+id/picker_icon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:minHeight="64dp"
        android:paddingTop="@dimen/padding_8"
        android:layout_marginEnd="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_8"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picker_label"
            tools:text="App Name"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.DiscoverKiller"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picker_package"
            tools:text="Package Name"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.DiscoverKiller"
            android:textColor="?android:textColorPrimary" />

    </LinearLayout>

</LinearLayout>