<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_settings"
    app:startDestination="@id/settingsConfigurationFragment">

    <fragment
        android:id="@+id/settingsConfigurationFragment"
        android:name="com.kieronquinn.app.discoverkiller.ui.screens.settings.configuration.SettingsConfigurationFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_settings_configuration" >
        <action
            android:id="@+id/action_settingsConfigurationFragment_to_settingsAppPickerFragment"
            app:destination="@id/settingsAppPickerFragment" />
        <action
            android:id="@+id/action_settingsConfigurationFragment_to_colorPickerBottomSheetFragment"
            app:destination="@id/colorPickerBottomSheetFragment" />
        <action
            android:id="@+id/action_settingsConfigurationFragment_to_settingsDumpLogsBottomSheetFragment"
            app:destination="@id/settingsDumpLogsBottomSheetFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsAppPickerFragment"
        android:name="com.kieronquinn.app.discoverkiller.ui.screens.settings.apppicker.SettingsAppPickerFragment"
        tools:layout="@layout/fragment_app_picker"
        android:label="@string/configuration_app_package" />
    <dialog
        android:id="@+id/colorPickerBottomSheetFragment"
        tools:layout="@layout/fragment_bottom_sheet_color_picker"
        android:name="com.kieronquinn.app.discoverkiller.ui.screens.settings.colorpicker.ColorPickerBottomSheetFragment"
        android:label=" " />
    <dialog
        android:id="@+id/settingsDumpLogsBottomSheetFragment"
        tools:layout="@layout/fragment_bottom_sheet_dump_logs"
        android:name="com.kieronquinn.app.discoverkiller.ui.screens.settings.dumplogs.SettingsDumpLogsBottomSheetFragment"
        android:label=" " />
</navigation>