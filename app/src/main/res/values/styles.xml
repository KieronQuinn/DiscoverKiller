<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CollapsingToolbarTitle.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CollapsingToolbarTitle.Expanded" parent="CollapsingToolbarTitle.Collapsed">
        <item name="android:textSize">36dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Popup" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="fontFamily">@font/google_sans_text</item>
    </style>

    <style name="DiscoverKillerOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/background_menu</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.DiscoverKiller" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_text</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.DiscoverKiller.Medium" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.DiscoverKiller.Medium.Forced" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.DiscoverKiller" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.DiscoverKiller.Lighter" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans_text</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.DiscoverKiller" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.DiscoverKiller.Lighter" parent="TextAppearance.AppCompat.Large.DiscoverKiller">
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextAppearance.AppCompat.ExtraLarge.DiscoverKiller" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/google_sans_text_medium</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.Tabs" parent="TextAppearance.AppCompat.Small.DiscoverKiller">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseBottomSheetDialog.Dark" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet.Dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">@color/cardview_dark_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg</item>
    </style>

    <style name="BottomSheet.Dark" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_bg_dark</item>
    </style>

    <style name="Widget.Material3.CardView.Filled.DiscoverKiller" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">?android:colorControlHighlight</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="Widget.Material3.Chip.Icon.DiscoverKiller" parent="@style/Widget.Material3.Chip.Assist">
        <item name="chipIconVisible">true</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
    </style>

    <style name="ThirdPartyLicencesActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/licenses_toolbar</item>
        <item name="titleTextStyle">@style/ThirdPartyLicencesToolbarTitleStyle</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="ThirdPartyLicencesToolbarTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/google_sans_text_medium</item>
    </style>

    <style name="ThirdPartyLicencesTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/google_sans_text</item>
    </style>

</resources>